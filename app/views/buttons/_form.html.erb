<%= form_for([@project, @proposal, @button]) do |f| %>
  <% if @button.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@button.errors.count, "error") %> prohibited this button from being saved:</h2>

      <ul>
      <% @button.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="fields">
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.check_box :pressing %>
          <%= f.label :pressing %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :pushing %>
          <%= f.label :pushing %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :pulling %>
          <%= f.label :pulling %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.check_box :turning %>
          <%= f.label :turning %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :sliding %>
          <%= f.label :sliding %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :shape %>
          <%= f.select :shape, Button::SHAPE_VALUES, prompt: true %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label 'Length or external diameter (mm)' %><br />
          <%= f.text_field :length_or_external_diameter, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label 'width (mm)' %><br />
          <%= f.text_field :width, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label 'height (mm)' %><br />
          <%= f.text_field :height, size: 10 %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label 'force_required (N)' %><br />
          <%= f.text_field :force_required, size: 10 %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :colour %><br />
          <%= f.text_field :colour, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :background_colour %><br />
          <%= f.text_field :background_colour, size: 10 %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.check_box :one_finger_press %>
          <%= f.label :one_finger_press %>
        </div>
        <div class="field">
          <%= f.check_box :two_fingers_press %>
          <%= f.label :two_fingers_press %>
        </div>
        <div class="field">
          <%= f.check_box :thumb_press %>
          <%= f.label :thumb_press %>
        </div>
      </td>
      <td></td>
    </tr>
  </table>
  <div class="actions">
    <%= link_to '&laquo; Back'.html_safe, :back %>
    <%= f.submit 'Save', name: :action_save %>
  </div>
<% end %>
