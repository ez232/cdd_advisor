<h1>Projects</h1>

<% unless @projects.empty? %>
  <table>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
    <% @projects.each do |project| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description"><%= project.name %></td>
        <td class="list_actions">
            <%= link_to 'Results', results_project_path(project) %>
            <%= link_to 'Manage proposals', project_proposals_path(project) %>
            <%= link_to 'Edit', edit_project_path(project) %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan="2"><%= will_paginate @projects %></td>
    </tr>
  </table>
<% end %>
<br />
<%= link_to 'New Project', new_project_path, class: 'button' %>