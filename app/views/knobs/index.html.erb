<h1>Listing knobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @knobs.each do |knob| %>
  <tr>
    <td><%= knob.name %></td>
    <td><%= link_to 'Edit',
          edit_project_proposal_knob_path(@project, @proposal, knob) %></td>
    <td><%= link_to 'Remove', [@project, @proposal, knob], method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '&laquo; Back'.html_safe, :back %>
<%= link_to 'New Knob', new_project_proposal_knob_path(@project, @proposal) %>
