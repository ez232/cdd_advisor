<%= content_for_breadcrumb %>
<h1><%= t('.title') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @proposals.each do |proposal| %>
    <tr>
      <td><%= proposal.name %></td>
      <td class="btn-group">
        <%= link_to(t('.edit'), edit_project_proposal_path(@project, proposal),
                    class: 'btn btn-small') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to(t('.back'), edit_project_path(@project),
      class: 'btn btn-secondary') %>
<%= link_to(t('.new'), new_project_proposal_path, class: 'btn btn-primary') %>