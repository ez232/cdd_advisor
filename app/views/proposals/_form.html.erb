<%= form_for(@proposal) do |f| %>
  <% if @proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@proposal.errors.count, "error") %> prohibited this 
        proposal from being saved:</h2>

      <ul>
      <% @proposal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>: 
    <%= f.text_field :name %>
  </div>

  <h2>Shape attributes</h2>
  <div class="field">
    <%= f.label :handle_shape %>:
    <%= collection_select(:proposal, :handle_shape_id, Shape.all, :id, :name, 
      prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :switch_shape %>:
    <%= collection_select(:proposal, :switch_shape_id, Shape.all, :id, :name, 
      prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :knob_shape %>:
    <%= collection_select(:proposal, :knob_shape_id, Shape.all, :id, :name, 
      prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :button_shape %>:
    <%= collection_select(:proposal, :button_shape_id, Shape.all, :id, :name, 
      prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :scrollbar_shape %>:
    <%= collection_select(:proposal, :scrollbar_shape_id, Shape.all, :id, :name, 
      prompt: true) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
