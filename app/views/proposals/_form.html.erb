<%= tb_form_wrapper(@proposal, :name) do %>
  <%= f.text_field :name, placeholder: t('.name_placeholder') %>
<% end %>
<%= tb_form_wrapper(@proposal, :product_weight) do %>
  <div class="input-append">
    <%= f.text_field :product_weight, class: 'input-small',
                     placeholder: t('.product_weight_placeholder') %>
    <span class="add-on"><%= t('.product_weight_unit') %></span>
  </div>
<% end %>
<%= tb_form_wrapper(@proposal, :images) do %>
  <div class="row-fluid">
    <button type="submit" class="btn btn-small" name="action_images">
      <i class="icon-picture"></i>
      <span><%= t('.upload_images') %></span>
    </button>
  </div>
  <div class="row-fluid">
    <ul class="thumbnails">
      <%= render partial: 'shared/image', collection: @proposal.images,
            locals: { span: 'span3' } %>
    </ul>
  </div>
<% end %>
