<h2>Audio device</h2>
<table class="fields">
  <tr>
    <td colspan="3">
      <div class="field">
        <%= f.label :range_of_volume_specifications %><br />
        <%= f.text_field :range_of_volume_specifications %>
      </div>        
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div class="field">
        <%= f.label :sound_volume_specifications %><br />
        <%= f.text_field :sound_volume_specifications %>
      </div>        
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div class="field">
        <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Remove audio device" %>
      </div>
    </td>
  </tr>
</table>