<table class="fields">
  <tr>
    <td>
      <div class="field">
        <%= f.check_box :holding %>
        <%= f.label :holding %>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.check_box :moving %>
        <%= f.label :moving %>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.check_box :carrying %>
        <%= f.label :carrying %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div class="field">
        <%= f.label :shape %>
        <%= f.select :shape, Handle::SHAPE_VALUES, prompt: true %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div class="field">
        <%= f.label 'External diameter (mm)' %><br />
        <%= f.text_field :external_diameter, size: 10 %>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.label 'width (mm)' %><br />
        <%= f.text_field :width, size: 10 %>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.label 'height (mm)' %><br />
        <%= f.text_field :height, size: 10 %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <%= render 'check_box_with_image', f: f, field: :pinch_grip %>
      <%= render 'check_box_with_image', f: f, field: :pinch_grip_2 %>
    </td>
    <td>
      <%= render 'check_box_with_image', f: f, field: :power_grip %>
    </td>
    <td>
      <%= render 'check_box_with_image', f: f, field: :spherical_grip %>
      <%= render 'check_box_with_image', f: f, field: :cylindrical_grip %>
    </td>
    <td>
      <%= render 'check_box_with_image', f: f, field: :disc_grip %>
      <%= render 'check_box_with_image', f: f, field: :disc_grip_2 %>
    </td>
    <td>
      <%= render 'check_box_with_image', f: f, field: :hook_grip %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div class="field">
        <%= link_to_remove_fields "Remove handle", f %>
      </div>
    </td>
  </tr>
</table>