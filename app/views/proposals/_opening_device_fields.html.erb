<h2>Opening device</h2>
<table class="fields">
  <tr>
    <td>
      <div class="field">
        <%= f.check_box :is_opening_device %>
        <%= f.label :is_opening_device %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div class="field">
        <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Remove opening device" %>
      </div>
    </td>
  </tr>
</table>