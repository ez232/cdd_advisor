<%= form_for([@project, @proposal, @label]) do |f| %>
  <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
      <% @label.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="fields">
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.check_box :printed %>
          <%= f.label :printed %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :digital %>
          <%= f.label :digital %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :font_type %>
          <%= f.text_field :font_type %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :text_size %><br />
          <%= f.text_field :text_size, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :text_colour %><br />
          <%= f.text_field :text_colour, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :background_colour %><br />
          <%= f.text_field :background_colour, size: 10 %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :reading_distance %><br />
          <%= f.text_field :reading_distance, size: 10 %>
        </div>
      </td>
    </tr>
  </table>
  <div class="actions">
    <%= link_to '&laquo; Back'.html_safe, :back %>
    <%= f.submit 'Save', name: :action_save %>
  </div>
<% end %>
