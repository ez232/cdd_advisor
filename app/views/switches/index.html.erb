<h1>Listing switches</h1>

<table>
  <tr>
    <th>Proposal</th>
    <th>Pressing</th>
    <th>Pushing</th>
    <th>Pulling</th>
    <th>Turning</th>
    <th>Sliding</th>
    <th>Shape</th>
    <th>Length or radius</th>
    <th>Width</th>
    <th>Height</th>
    <th>Force required</th>
    <th>Colour</th>
    <th>Background colour</th>
    <th>Pinch grip</th>
    <th>Span grip</th>
    <th>Spherical grip</th>
    <th>Disc grip</th>
    <th>Flat hand push</th>
    <th>One finger press</th>
    <th>Two fingers press</th>
    <th>Thumb press</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @switches.each do |switch| %>
  <tr>
    <td><%= switch.proposal_id %></td>
    <td><%= switch.pressing %></td>
    <td><%= switch.pushing %></td>
    <td><%= switch.pulling %></td>
    <td><%= switch.turning %></td>
    <td><%= switch.sliding %></td>
    <td><%= switch.shape %></td>
    <td><%= switch.length_or_radius %></td>
    <td><%= switch.width %></td>
    <td><%= switch.height %></td>
    <td><%= switch.force_required %></td>
    <td><%= switch.colour %></td>
    <td><%= switch.background_colour %></td>
    <td><%= switch.pinch_grip %></td>
    <td><%= switch.span_grip %></td>
    <td><%= switch.spherical_grip %></td>
    <td><%= switch.disc_grip %></td>
    <td><%= switch.flat_hand_push %></td>
    <td><%= switch.one_finger_press %></td>
    <td><%= switch.two_fingers_press %></td>
    <td><%= switch.thumb_press %></td>
    <td><%= link_to 'Show', switch %></td>
    <td><%= link_to 'Edit', edit_switch_path(switch) %></td>
    <td><%= link_to 'Destroy', switch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

