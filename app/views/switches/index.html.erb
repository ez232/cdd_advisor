<h1>Listing switches</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @switches.each do |switch| %>
  <tr>
    <td><%= switch.name %></td>
    <td><%= link_to 'Edit',
          edit_project_proposal_switch_path(@project, @proposal, switch) %></td>
    <td><%= link_to 'Remove', [@project, @proposal, switch], method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '&laquo; Back'.html_safe, :back %>
<%= link_to 'New Switch', new_project_proposal_switch_path(@project, @proposal) %>
