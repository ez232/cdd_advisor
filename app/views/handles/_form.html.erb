<%= form_for([@project, @proposal, @handle]) do |f| %>
  <% if @handle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@handle.errors.count, "error") %> prohibited this handle from being saved:</h2>

      <ul>
      <% @handle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="fields">
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.check_box :holding %>
          <%= f.label :holding %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :moving %>
          <%= f.label :moving %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.check_box :carrying %>
          <%= f.label :carrying %>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div class="field">
          <%= f.label :shape %>
          <%= f.select :shape, Handle::SHAPE_VALUES, prompt: true %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="field">
          <%= f.label :external_diameter %><br />
          <%= f.text_field :external_diameter, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :width %><br />
          <%= f.text_field :width, size: 10 %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :height %><br />
          <%= f.text_field :height, size: 10 %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <%= render 'shared/check_box_with_image', f: f, field: :pinch_grip %>
        <%= render 'shared/check_box_with_image', f: f, field: :pinch_grip_2 %>
      </td>
      <td>
        <%= render 'shared/check_box_with_image', f: f, field: :power_grip %>
      </td>
      <td>
        <%= render 'shared/check_box_with_image', f: f, field: :spherical_grip %>
        <%= render 'shared/check_box_with_image', f: f, field: :cylindrical_grip %>
      </td>
      <td>
        <%= render 'shared/check_box_with_image', f: f, field: :disc_grip %>
        <%= render 'shared/check_box_with_image', f: f, field: :disc_grip_2 %>
      </td>
      <td>
        <%= render 'shared/check_box_with_image', f: f, field: :hook_grip %>
      </td>
    </tr>
  </table>
  <div class="actions">
    <%= link_to '&laquo; Back'.html_safe, :back %>
    <%= f.submit 'Save', name: :action_save %>
  </div>
<% end %>
